generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Blog {
  id          Int        @id @default(autoincrement())
  content     String     @default("")
  category    Category[]
  createdAt   DateTime   @default(now())
  published   Boolean    @default(false)
}

model Category {
  name  String  @id
  blogs Blog[]
}

enum Role {
  USER
  ADMIN
}